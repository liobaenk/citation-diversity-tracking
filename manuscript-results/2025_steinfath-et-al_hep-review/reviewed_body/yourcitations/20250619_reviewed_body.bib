	author = {Baranauskas, Mindaugas and Grabauskaitė, Aida and Griškova-Bulanova, Inga},
	month = oct,
	year = {2017},
	pages = {1--7},
}

@article{pang_altered_2019,
	title = {Altered {Interoceptive} {Processing} in {Generalized} {Anxiety} {Disorder}—{A} {Heartbeat}-{Evoked} {Potential} {Research}},
