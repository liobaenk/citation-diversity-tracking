}

@article{billeci_heartbeat-evoked_2021,
	title = {Heartbeat-{Evoked} {Cortical} {Potential} during {Sleep} and {Interoceptive} {Sensitivity}: {A} {Matter} of {Hypnotizability}},
	volume = {11},
	copyright = {https://creativecommons.org/licenses/by/4.0/},
