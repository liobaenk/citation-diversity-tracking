	author = {Legaz, Agustina and Yoris, Adrián and Sedeño, Lucas and Abrevaya, Sofía and Martorell, Miguel and Alifano, Florencia and García, Adolfo M. and Ibañez, Agustin},
	month = may,
	year = {2022},
	pmid = {32965070},
	pmcid = {PMC8231407},
	keywords = {Autonomic Nervous System, Brain, Cognition, Heart Rate, heart rate variability, Humans, hypertension, Hypertension, psychosocial stress},
	pages = {2836--2850},
}

